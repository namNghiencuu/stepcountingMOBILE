<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stepcounting">
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/CATN"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- Service that provides activity recognition data. Setting the android:exported attribute
       to "false" stops other apps from starting this service, even when using an explicit
       intent. -->
        <service
            android:name=".DetectedActivitiesIntentService"
            android:exported="false" />


        <service android:name=".BackgroundDetectedActivitiesService"
                 android:label="BackgroundDetectedActivitiesService">

        </service>
        <service android:enabled="true" android:name=".FragmentCounting" />

        <service android:name=".BackgroundDetectedActivitiesService"
                 android:label="BackgroundDetectedActivitiesService"></service>
        <service android:enabled="true" android:name=".FragmentCounting" />

    </application>

</manifest>